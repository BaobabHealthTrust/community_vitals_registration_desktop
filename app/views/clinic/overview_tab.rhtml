        <td id="number"><span><%= @boys_this_month.count %></span></td>
        <td id="number"><span><%= @boys_this_year.count %></span></td>
      </tr>
      <tr>
        <td id="people" >Atsikana</td>
        <td id="number"><span><%= @girls_today.count %></span></td>
        <td id="number"><span><%= @girls_this_week.count %></span></td>
        <td id="number"><span><%= @girls_this_month.count %></span></td>
        <td id="number"><span><%= @girls_this_year.count %></span></td>
      </tr>
    </table>


  </div>
</div>
