<html>
  <head>
<style type="text/css">

  table {
    vertical-align:center;
    width: 97%;
    height: auto;
    -moz-user-select:none;
    border-style: solid;
    border-width: 1px;
    border-radius: 10px;
  }
  

  .title {
    font-size: 25px;
    text-align: left;
    border-style: solid;
    border-width: 1px 1px 0px 0px;
  }
  .title-top {
    font-size: 25px;
    text-align: left;
    border-style: solid;
    border-width: 0px 1px 0px 0px;
  }
 .data {
    font-size: 25px;
    text-align: left;
    border-style: solid;
    border-width: 1px 1px 0px 0px;

  }
  .data-top {
    font-size: 25px;
    text-align: left;
    border-style: solid;
    border-width: 0px 1px 0px 0px;

  }
  a {
    background: url('/images/btn_blue.png');
    background-repeat: repeat-x;
    color: white;
    display: block;
    padding: 0px;
    min-height: 50px;
    min-width: 90px;
    text-align: center;
    text-decoration: none;
    vertical-align: middle;
    font-size: 25px;
    border-radius: 10px;
  }

  .container {
    height: 92%;
    background-color: white;
    margin: 20px 20px 20px 20px;
    overflow: auto;
    -moz-border-radius: 10px;
    padding-top: 2%;
  }

  td a{
    padding-top: 5px;
  }

</style>

<script type="text/javascript">
  tt_cancel_destination = "/patients/show?patient_id=<%= @patient_bean.patient_id%>";
</script>
  </head>
  <body>
<div class="container">
  <div id="details" style="max-height:650px;overflow:auto;display:block">
    <div>

     <table>
        <tr>
          <td class='title-top'>
              Dzina loyamba
          </td>
          <td class='data-top'><%= @patient_bean.first_name %></td>
		  <td><a href="edit_demographics?patient_id=<%= @patient_bean.patient_id %>&field=first_name">Konzani</a></td>
        </tr>
        <tr>
          <td class='title'>Dzina la kholo</td>
          <td class='data'><%= @patient_bean.last_name %></td>
          <td><a href="edit_demographics?patient_id=<%= @patient_bean.patient_id %>&field=last_name">Konzani</a></td>
        </tr>

        <tr>
          <td class='title'>Tsiku lobadwa</td>
          <td class='data'><%= @patient_bean.birth_date %></td>
          <td><a href="edit_demographics?patient_id=<%= @patient_bean.patient_id %>&field=birthdate">Konzani</a></td>
        </tr>
        <tr>
          <td class='title'>Mwanuma/Mkazi</td>
          <td class='data'><%= @patient_bean.sex == "Male" ? "Mwamuna":"Mkazi"  %></td>
          <td><a href="edit_demographics?patient_id=<%= @patient_bean.patient_id %>&field=gender">Konzani</a></td>
        </tr>
					<tr>
            <td class='title'>Boma lochokera</td>
            <td class='data'> <%= @patient_bean.home_district %></td>
			<td><a href="edit_demographics?patient_id=<%= @patient_bean.patient_id %>&field=home_district">Konzani</a></td>
          </tr>
					<tr>
            <td class='title'>Mfumu yayikulu(T/A)</td>
            <td class='data'><%= @patient_bean.traditional_authority %></td>
			<td><a href="edit_demographics?patient_id=<%= @patient_bean.patient_id %>&field=home_district">Konzani</a></td>
          </tr>
					<tr>
            <td class='title'>Mudzi/Dera lochokera</td>
            <td class='data'> <%= @patient_bean.home_village %></td>
 			<td><a href="edit_demographics?patient_id=<%= @patient_bean.patient_id %>&field=home_district">Konzani</a></td>
          </tr>
					<tr>
            <td class='title'>Boma lokhala</td>
            <td class='data'> <%= @patient_bean.current_district   %></td>
			<td><a href="edit_demographics?patient_id=<%= @patient_bean.patient_id %>&field=current_district"> Konzani</a></td>
         <tr>
            <td class='title'>Dera lokhala</td>
            <td class='data'> <%= @patient_bean.current_residence %></td>
			<td><a href="edit_demographics?patient_id=<%= @patient_bean.patient_id %>&field=current_district"> Konzani</a></td>
          </tr>

          <tr>
            <td class='title'>Malo odziwika oyandikana nanu</td>
            <td class='data'> <%= @patient_bean.landmark%></td>
			<td><a href="edit_demographics?patient_id=<%=@patient_bean.patient_id%>&field=landmark">Konzani</a></td>
          </tr>

      </table>

    </div>
  </div>
</div>

<div id="footer">

</div>

<script>
  function setPosition(){
    finish = document.getElementById('finishButton')
    finish.style.position = 'absolute'
    finish.style.left = '0px'
  }
  setTimeout("setPosition()",10);
</script>
</body>
</html>



  